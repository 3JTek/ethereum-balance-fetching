{
  "extends": "@repo/typescript-config/nextjs.json",
  "compilerOptions": {
    "plugins": [
      {
        "name": "next"
      }
    ],
    "baseUrl": ".", // Set the base directory for resolving paths
    "paths": {
      "@components/*": ["src/components/*"], // Example alias for components
      "@utils/*": ["src/utils/*"], // Example alias for utilities
      "@styles/*": ["src/styles/*"] // Example alias for styles
    }
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    "next-env.d.ts",
    "next.config.js",
    ".next/types/**/*.ts"
  ],
  "exclude": ["node_modules"]
}
